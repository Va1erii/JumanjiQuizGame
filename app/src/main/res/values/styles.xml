<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/jumaji_font</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="SubTitleText">
        <item name="android:fontFamily">@font/jumaji_font</item>
        <item name="android:textColor">@color/colorTextSubTitle</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="HeroesName">
        <item name="android:fontFamily">@font/jumaji_font</item>
        <item name="android:textColor">@color/colorTextSubTitle</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="HeroesCharacteristic">
        <item name="android:fontFamily">@font/jumaji_font</item>
        <item name="android:textColor">@color/colorTextSubTitle</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextJumanji">
        <item name="android:fontFamily">@font/koookaburra</item>
        <item name="android:textColor">@color/colorTextJumanji</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextJumanjiQuote">
        <item name="android:fontFamily">@font/koookaburra</item>
        <item name="android:textColor">@color/colorTextSubTitle</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textStart</item>
    </style>

</resources>
